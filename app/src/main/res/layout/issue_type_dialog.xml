<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="30dp"
    android:background="@android:color/transparent"
    android:gravity="center">


    <include layout="@layout/issue_type_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_bar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:layout_below="@id/title_bar"
        android:background="@drawable/bg_dialog_bottom_rounded"
        android:id="@+id/main_dialog">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="2dp"
            android:id="@+id/issue_type_1_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1" >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:gravity="center">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_error"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_circle_white"
                    android:elevation="5dp"
                    android:padding="5dp"
                    android:layout_margin="3dp"
                    android:id="@+id/issue_type_1_img"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="match_parent"
                    android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Damaged "
                    android:typeface="serif"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:id="@+id/issue_type_1_name"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitCenter"
                        android:padding="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_drop_arrow_1"
                        android:layout_gravity="center"
                        android:id="@+id/issue_type_1_see_more"
                        />
                </LinearLayout>



            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The item is broken or leaked."
                android:textStyle="italic"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:id="@+id/issue_type_1_suggstn"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryLight"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/separator_1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/issue_type_2_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_missing"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_circle_white"
                        android:elevation="5dp"
                        android:padding="5dp"
                        android:layout_margin="3dp"
                        android:id="@+id/issue_type_2_img"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Missing"
                        android:typeface="serif"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:id="@+id/issue_type_2_name"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitCenter"
                        android:padding="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_drop_arrow_1"
                        android:layout_gravity="center"
                        android:id="@+id/issue_type_2_see_more"/>
                </LinearLayout>



            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Could not Find the Item"
                android:textStyle="italic"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:id="@+id/issue_type_2_suggstn"/>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryLight"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/separator_2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/issue_type_3_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1" >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_load"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_circle_white"
                        android:elevation="5dp"
                        android:padding="5dp"
                        android:layout_margin="3dp"
                        android:id="@+id/issue_type_3_img"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Weight Change "
                        android:typeface="serif"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:id="@+id/issue_type_3_name"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitCenter"
                        android:padding="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_drop_arrow_1"
                        android:layout_gravity="center"
                        android:id="@+id/issue_type_3_see_more"/>
                </LinearLayout>



            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The weight of the item is different from actual weight."
                android:textStyle="italic"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="50dp"
                android:paddingRight="20dp"
                android:id="@+id/issue_type_3_suggstn"/>



        </LinearLayout>
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            
            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@drawable/bg_selected_category_holder_primary_brder"
                    android:textSize="15sp"
                    android:inputType="number"
                    android:layout_gravity="center"
                    android:id="@+id/issue_details"
                    android:textColor="@color/black"
                    android:gravity="center"/>
                
            </android.support.design.widget.TextInputLayout>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           android:id="@+id/button_layout">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryLight"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:padding="10dp"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.45"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="ADD DETAILS.."
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:minWidth="2dp"
                        android:minHeight="2dp"
                        android:typeface="serif"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/button_1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_separator"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.45"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="DONE"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:minWidth="2dp"
                        android:minHeight="2dp"
                        android:typeface="serif"
                        android:id="@+id/button_2"/>

                </LinearLayout>


            </LinearLayout>





        </LinearLayout>


    </LinearLayout>










</RelativeLayout>